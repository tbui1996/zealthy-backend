    name = "external_oh_authorizer_test",
    srcs = ["handler_test.go"],
    embed = [":external_oh_authorizer_lib"],
    deps = [
        "//packages/common/authorizer",
        "//packages/common/authorizer/mocks",
        "@com_github_aws_aws_lambda_go//events",
        "@com_github_golang_jwt_jwt//:jwt",
